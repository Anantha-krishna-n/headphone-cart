<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css"> <!-- Include your CSS file -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.5/lottie.min.js"></script>
</head>
<body>
    <style>
        .center-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

#animation-container {
    width: 50%; /* Adjust width as needed */
    padding: 20px;
    border: 1px solid #ccc; /* Example border */
    text-align: center; /* Center the content horizontally */
}
#animation{
    width: 500px;
    height: 500px;
}
.button-like {
            display: inline-block;
            background-color: #007bff; /* Button background color */
            color: white; /* Button text color */
            padding: 10px 20px; /* Button padding */
            text-decoration: none; /* Remove default underline */
            border-radius: 5px; /* Rounded corners */
            cursor: pointer; /* Show pointer on hover */
            transition: background-color 0.3s; /* Smooth transition for hover effect */
        }

        .button-like:hover {
            background-color: #0056b3; /* Darker background color on hover */
        }
    </style>
    <!-- Include navigation -->
    <%-include('../partials/nav.ejs') %>

    <div class="center-container"> <!-- Add a class for centering -->
        <div class="container" id="animation-container"> <!-- Add an ID for adjusting width and height -->
            <h2>Order placed successfully...</h2>
            <a class="button-like" href="/home">Continue shopping</a>
        </div>
    </div>

    <!-- Container for the animation -->
    <div id="animation"></div>
         
    <script>
        // Load the Lottie animation
        const animation = bodymovin.loadAnimation({
            container: document.getElementById('animation'),
            renderer: 'svg',
            loop: false,
            autoplay: true,
            path: '/Animation - 1703496179533 (1).json' // Provide the correct path to your Lottie animation JSON file
        });
    </script>

    <!-- Include footer -->
    <%-include('../partials/footer.ejs') %>
</body>
</html>
