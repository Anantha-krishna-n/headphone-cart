        </button>
        <button type="button" class="btn add-to-cart-btn" <% if (product.quantity === 0) { %> disabled <% } %> data-product-id="<%= product._id %>">
            <% if (product.quantity === 0) { %>
                Out of Stock
            <% } else { %>
                Add to Cart <i class="fas fa-shopping-cart"></i>
            <% } %>
        </button>
                </div>
        </div>
        
          </div> 
          <%})%> 
