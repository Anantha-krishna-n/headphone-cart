</head>
<body>
    
    <div class="background-image"></div>

    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/signupVerifyOtp" method="POST" class="login">
                    <h3>Email Verification</h3>
                    <!-- <p> sign</p> -->
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="verify OTP" name="otp">
                    </div>
                    <!-- <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter OTP" name="otp">
                       
                    </div> -->
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="submit otp">
                    </div>
                    
                  <form id="resendForm" action="/signResendOtp" method="POST">
                    <button type="submit" class="resend-btn" id="resendButton" disabled>Resend OTP in <span id="timer">10</span> seconds</button>
                  </form>
             </form>
              
                </div>
            </div>
        </div>


                <script>
                    const timer = document.getElementById('timer');
                    const resendBtn = document.getElementById('resendButton');
                
                    let timeLeft = 10; // Set the timer duration in seconds
                
                    const countdown = setInterval(() => {
                      timeLeft--;
                      timer.textContent = timeLeft;
                      if (timeLeft <= 0) {
                        clearInterval(countdown);
                        resendBtn.removeAttribute('disabled');
                        resendBtn.classList.remove('disabled');
                        resendBtn.classList.add('exceeded');
                        resendBtn.textContent = 'Resend OTP';
                      }
                    }, 1000)
                  </script>
                </body>
                <script>
                    if ( window.history.replaceState ) {
                  window.history.replaceState( null, null, window.location.href );
                }
                  </script>
