        <script>
            function validateForm() {
        const price = document.getElementById('price').value;
        const quantity = document.getElementById('quantity').value;

        // Check if price is a positive number
        if (parseFloat(price) <= 0 || isNaN(parseFloat(price))) {
            document.getElementById('mrp_err').textContent = 'Price must be a positive number';
            document.getElementById('mrp_err').style.display = 'block';
            return false; // Prevent form submission
        } else {
            document.getElementById('mrp_err').style.display = 'none';
        }

        // Check if quantity is a positive number
        if (parseInt(quantity) <= 0 || isNaN(parseInt(quantity))) {
            document.getElementById('quantity_err').textContent = 'Quantity must be a positive integer';
            document.getElementById('quantity_err').style.display = 'block';
            return false; // Prevent form submission
        } else {
            document.getElementById('quantity_err').style.display = 'none';
        }

        return true; // Allow form submission
    }
