    <script>
    function toggleOffer(offerId, activate) {
        console.log("Offer ID:", offerId); // Add this line to log the offer ID
    const action = activate ? 'list' : 'unlist';
       console.log(offerId,"jhj")
    Swal.fire({
        title: 'Are you sure?',
        text: `You are about to ${action} this offer!`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: `Yes, ${action} it!`
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/toggleOffer/${offerId}?action=${action}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ offerId: offerId })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                location.reload(); // Reload the page to reflect changes
            })
            .catch(error => {
                console.error('There was an error!', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong! Unable to perform the action.'
                });
            });
        }
    });
}
    </script>


