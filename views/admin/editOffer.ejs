    <main class="main-content border-radius-lg ">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div
                                class="bg-gradient-danger shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between">
                                <h6 class="text-white text-capitalize ps-3">Edit offer</h6>
                                <div class="d-flex align-items-center">


                                    
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <form class="mb-0 space-y-2" action="/editoffer/<%=selectedOffer._id%>" method="post" style="max-width: 400px; margin: 0 auto;">

                                <!-- Form fields go here -->
                                  <label for="discount" class=" form-label block text-sm font-medium text-gray-600">Discount:</label>
                                  <input type="number" id="discount" name="discount" class="form-control mt-1 p-2 border border-gray-300 rounded w-full" value="<%= locals.selectedOffer.discount %>" required>
                                  
                                  <label for="expiryDate" class="form-label block text-sm font-medium mt-3 text-gray-600">Expiry Date:</label>
                                  <% 
                                      
                                      const expiryDateParts = locals.selectedOffer.expiryDate.split('/')

                                      const formattedExpiryDate = `${expiryDateParts[2]}-${expiryDateParts[1]}-${expiryDateParts[0]}`
                                  %>
                                  <input type="date" id="expiryDate" name="expiryDate" class="form-control mt-1 p-2 border border-gray-300 rounded w-full" value="<%= formattedExpiryDate %>">
                                  <div class="invisible">
                                  <input type="text" value="<%= locals.selectedOffer._id %>" class="" id="id" name="id">
                              </div>
                          
                              <div class="flex items-center justify-center">
                              <button type="submit" class="btn btn-success">Update Offer</button>
                              </div>
                              </form>
                        </div>
                    </div>
                </div>
